<?xml version="1.0" encoding="utf-8"?>

<!--    TODO @SimbStart:    For fragment_shoe_detail, I chose 'ConstraintLayout' because I have a number of specified views
           I need to properly constraint for my screens. With the help of ScrollView, it enables my designs to adjust to any screen size.
            I have tested my designs both on (Potrait/Landscape)   -->

<layout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
>

    <data>
        <variable
                name="shoe"
                type="com.udacity.shoestore.models.Shoe"/>
        <variable
                name="shoeListViewModel"
                type="com.udacity.shoestore.ui.shoelist.ShoeStoreViewModel"/>
    </data>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                tools:context=".ui.shoedetail.ShoeDetailFragment">
            <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/shoe7"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:id="@+id/imageView"
                    app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                    android:text="@string/enter_new_shoe"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/new_shoe_txt"
                    android:textSize="24sp"
                    android:textColor="#000"
                    android:fontFamily="@font/roboto"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/imageView"
                    android:layout_marginTop="8dp"/>
            <TextView
                    android:text="@string/shoename"
                    android:layout_width="0dp"
                    android:fontFamily="@font/roboto"
                    android:textColor="#000"
                    android:layout_height="wrap_content"
                    android:id="@+id/shoename_txt"
                    app:layout_constraintTop_toBottomOf="@+id/new_shoe_txt"
                    app:layout_constraintBottom_toTopOf="@+id/enter_shoename_edtxt"
                    app:layout_constraintVertical_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="32dp"/>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:padding="4dp"
                    android:background="@drawable/edittext_border"
                    android:inputType="textPersonName"
                    android:text="@={shoeListViewModel.shoeName}"
                    android:hint="@string/enter_shoename"
                    android:id="@+id/enter_shoename_edtxt"
                    app:layout_constraintTop_toBottomOf="@+id/shoename_txt"
                    app:layout_constraintBottom_toTopOf="@+id/entrcompany_text"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                    android:text="@string/enter_company"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:id="@+id/entrcompany_text"
                    app:layout_constraintTop_toBottomOf="@+id/enter_shoename_edtxt"
                    app:layout_constraintBottom_toTopOf="@+id/enter_company_edtxt"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"/>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:padding="4dp"
                    android:background="@drawable/edittext_border"
                    android:inputType="textPersonName"
                    android:text="@={shoeListViewModel.company}"
                    android:hint="@string/enter_company"
                    android:id="@+id/enter_company_edtxt"
                    app:layout_constraintTop_toBottomOf="@+id/entrcompany_text"
                    app:layout_constraintBottom_toTopOf="@+id/enter_shoesize_txt"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                    android:text="@string/enter_shoesize"
                    android:layout_width="0dp"
                    android:textColor="#000"
                    android:layout_height="wrap_content"
                    android:id="@+id/enter_shoesize_txt"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/enter_company_edtxt"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintBottom_toTopOf="@+id/enter_shoesize_edtxt"/>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:padding="4dp"
                    android:background="@drawable/edittext_border"
                    android:inputType="number"
                    android:hint="@string/enter_shoesize"
                    android:text="@{String.valueOf(shoeListViewModel.shoeSize)}"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    android:id="@+id/enter_shoesize_edtxt"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/enter_shoesize_txt"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintBottom_toTopOf="@+id/enter_description_txt"/>
            <TextView
                    android:text="@string/description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textColor="#000"
                    android:layout_marginStart="8dp"
                    android:id="@+id/enter_description_txt"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/enter_shoesize_edtxt"
                    android:layout_marginTop="8dp"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintBottom_toTopOf="@+id/enter_description_edtxt"/>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:padding="4dp"
                    android:background="@drawable/edittext_border"
                    android:hint="@string/enter_description"
                    android:inputType="textPersonName"
                    android:text="@={shoeListViewModel.description}"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    android:id="@+id/enter_description_edtxt"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/enter_description_txt"
                    app:layout_constraintHorizontal_bias="0.5"/>
            <Button
                    android:text="@string/save_newshoe"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/save_newshoe_button"
                    android:onClick="@{() -> shoeListViewModel.saveNewShoe()}"
                    android:theme="@style/SuccessButton"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintTop_toBottomOf="@id/enter_description_edtxt"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/cancel_button"
                    app:layout_constraintHorizontal_bias="0.5" android:layout_marginTop="16dp"/>
            <Button
                    android:text="@string/cancel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:id="@+id/cancel_button"
                    android:theme="@style/CancelButton"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toStartOf="@+id/save_newshoe_button"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</layout>
