<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="shoeListViewModel" type="com.udacity.shoestore.ui.shoelist.ShoeStoreViewModel"/>
    </data>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            tools:context=".ui.shoelist.ShoeListFragment">

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <!-- Dummy Text -->
                <TextView
                        android:id="@+id/dummy_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/app_name"
                        android:fontFamily="@font/roboto"
                        android:textSize="32sp"
                        android:gravity="center"
                        android:textColor="#000"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"/>

                <!-- Add your code for displaying Shoe items here, potentially using a RecyclerView -->

            </LinearLayout>

        </ScrollView>

        <!-- FloatingActionButton -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/ic_add"
                app:backgroundTint="?attr/colorPrimary"
                app:elevation="6dp"/>
    </LinearLayout>
</layout>
